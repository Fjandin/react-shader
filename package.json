{
  "name": "@fjandin/react-shader",
  "version": "0.0.6",
  "description": "React component for rendering WebGL shaders",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "react",
    "shader",
    "webgl",
    "glsl",
    "graphics"
  ],
  "author": "fjandin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fjandin/react-shader.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:esm && bun run build:cjs && bun run build:types",
    "build:esm": "bun build ./src/index.ts --outdir ./dist --target browser --format esm --external react --external react-dom",
    "build:cjs": "bun build ./src/index.ts --target browser --format cjs --outfile ./dist/index.cjs --external react --external react-dom",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "lint": "biome check",
    "typecheck": "tsc --noEmit",
    "dev": "bun run src/example/index.ts"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "bun-types": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
